{
  "compilerOptions": {
    "checkJs": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "es2020",
    "module": "es2015",
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "~content": ["content"],
      "~gatsby": ["src/gatsby"],
      "~assets": ["src/assets"],
      "~components": ["src/components"],
      "~hooks": ["src/hooks"],
      "~pages": ["src/pages"],
      "~styles": ["src/styles"],
      "~templates": ["src/templates"],
      "~utils": ["src/utils"],
      "~config": ["src/config.js"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    ".vscode",
    ".npm",
    ".yarn",
    "dist",
    "build",
    "coverage",
    "node_modules"
  ],
  "typeAcquisition": {
    "enable": true,
    "include": [
      "react",
      "react-dom",
      "jest",
      "testing-library__jest-dom"
    ]
  }
}